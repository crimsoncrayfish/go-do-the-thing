<!DOCTYPE html>
{{ block "index" .}}
<html lang="en">
{{ template "header" }}

<body class="dark:bg-gray-900 antialiased ">
<header class="sticky top-0 z-10 flex items-center justify-between w-full mx-auto bg-white border-b border-gray-200 dark:border-gray-600 dark:bg-gray-800">
    <div class="flex items-center justify-between w-full px-3 py-3 mx-auto max-w-8xl lg:px-4">
        <a href="/home"><p class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">TODO: Think of a
                heading</p></a>
    </div>
    <button onclick="toggleElementVisibilityById('dropdown')"
            class="text-slate-500 px-3 flex items-center justify-center hover:text-slate-600 dark:text-slate-400 dark:hover:text-slate-300">
            <span class="sr-only">
                Navigation
            </span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
             class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
        </svg>
    </button>
</header>
<div class="px-4 sm:px-6 md:px-8">

    <div class="relative pt-6 lg:pt-8 flex items-center text-slate-700 font-semibold text-sm leading-6 dark:text-slate-200">
        <h1 class="text-slate-900 dark:text-gray-50 w-auto h-5">Hello world!</h1>
    </div>


    <div class="p-15 font-bold text-slate-700 text-5xl dark:text-slate-200">
        {{ template "test-form" . }}
    </div>

    <div id="contacts" class="p-15 font-bold text-slate-700 text-5xl dark:text-slate-200">
        {{ template "contacts" . }}
    </div>

    <div id="count" class="p-16 font-bold text-slate-700 text-5xl dark:text-slate-200">
        {{ template "count" . }}
    </div>

    <button hx-target="#count" hx-post="/increment"
            class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
            <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                Count++
            </span>
    </button>
</div>
<!-- Dropdown menu -->
<div id="dropdown"
     class="fixed hidden z-100 top-16 right-1.5 bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
        <li>
            <a href="/todo/list" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Items</a>
        </li>
        <li>
            <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Sign
                out</a>
        </li>
    </ul>
</div>
</body>
</html>
{{ end }}

{{ block "count" . }}
    Count {{ .Count }}
{{ end }}

{{ block "test-form" . }}
    <div class="py-5">
        <div>
            <button onclick="toggleElementVisibilityById('contact-form')"
                    class="flex items-center justify-between h-14 w-full font-medium text-lg p-5 rtl:text-right text-gray-500 border border-gray-200 rounded-t-xl dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3">
                <span>Contacts Form</span>
                <svg class="w-3 h-3 rotate-180 shrink-0" fill="none" viewBox="0 0 10 6" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 5 5 1 1 5"/>
                </svg>
            </button>
        </div>
        <div id="contact-form" class="hidden mb-1">
            <form hx-target="#contacts" hx-post="/contacts/add"
                  class="px-5 pt-5 pb-1 border border-gray-200 dark:border-gray-700 mb-0 dark:bg-gray-900 ">
                <div class="mb-5">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name
                        <input type="text" name="name"
                               class="bg-gray-50 mt-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/></label>
                </div>
                <div class="mb-5">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email
                        <input type="email" name="email"
                               class="bg-gray-50 mt-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/></label>
                </div>

                <button type="submit"
                        class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
                    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                        Add Contact
                    </span>
                </button>
            </form>
        </div>
    </div>
{{ end }}

{{ block "contacts" . }}
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>

            </tr>
            </thead>
            <tbody>
            {{ if .Contacts }}
                {{ range .Contacts }}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ .Name }}
                        </th>
                        <td class="px-6 py-4">
                            {{ .Email }}
                        </td>
                    </tr>
                {{ end }}
            {{ else }}
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                    <td class="px-6 py-4">
                        <p>No contacts found</p>
                    </td>
                </tr>
            {{end}}

            </tbody>
        </table>
    </div>
{{ end }}