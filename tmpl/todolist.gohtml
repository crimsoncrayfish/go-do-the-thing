<!DOCTYPE html>
{{ block "todolist" .}}
<html lang="en">
{{ template "header" }}
<body class="dark:bg-gray-900 antialiased">
<div>
    {{ template "navbar" }}
    <div class="w-full px-4 mx-auto max-w-8xl">
        <div class="pt-5 px-5 flex w-full justify-between">
            <p class="text-xl text-gray-900 dark:text-white">TODO: Items</p>
            <div>
                <button class="text-gray-900 dark:text-white"
                        onclick="toggleElementVisibilityById('create-task-modal')">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                    </svg>
                </button>
            </div>
        </div>
        <div class="relative items-center overflow-x-auto pt-5">
            <table class="w-full text-sm text-left rtl:text-right text-gray-50 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">Is Complete</th>
                    <th scope="col" class="px-6 py-3">Task</th>
                    <th scope="col" class="px-6 py-3">Assignee</th>
                    <th scope="col" class="px-6 py-3">Due Date</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
                </thead>
                <tbody id="contact-rows">
                {{ range .Tasks }}
                    {{ template "todo-item-row" . }}
                {{ end }}
                </tbody>
            </table>
        </div>
    </div>
    {{ template "create-task" }}
</div>
<script>
    function resetCreateForm() {
        console.warn("resetting the form")
        let form = document.getElementById('create-task-form');
        form.reset();
        toggleElementVisibilityById('create-task-modal');
    }
</script>
</body>
</html>
{{ end }}

{{ block "create-task" . }}
    <div id="create-task-modal" tabindex="-1" aria-hidden="true"
         class="hidden overflow-y-auto overflow-x-hidden fixed z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative mx-auto my-auto p-4 w-full max-w-2xl max-h-full">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                    <p class="text-gray-900 text-xl dark:text-white">TODO: Add a task</p>
                    <button class="text-gray-900 dark:text-white"
                            onclick="toggleElementVisibilityById('create-task-modal')">X
                    </button>
                </div>
                <form hx-on::after-request="resetCreateForm()" id="create-task-form" hx-target="#" hx-post="/todo/item"
                      class="px-5 pt-5 pb-1 border border-gray-200 dark:border-gray-700 mb-0 dark:bg-gray-900 ">
                    <div class="mb-5">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"> Description
                            <input type="text" name="description"
                                   class="bg-gray-50 mt-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/></label>
                    </div>
                    <div class="mb-5">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"> Due date
                            <input type="date" value="22/02/2022" name="due_date"
                                   class="bg-gray-50 mt-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/></label>
                    </div>
                    <div class="mb-5">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"> Assigned To
                            <input type="text" name="assigned_to"
                                   class="bg-gray-50 mt-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/></label>
                    </div>
                    <button hx-swap="afterbegin" hx-target="#contact-rows" type="submit" hx-post="/todo/item"
                            class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
                    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                        Add Task
                    </span>
                    </button>
                </form>
            </div>
        </div>
    </div>
{{ end }}